<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">



<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="search:"
    android:id="@+id/searchText"
    android:padding="8dp" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/search_input"
    android:layout_weight="1"
    android:hint="(Required)" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/dietFoodRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:layout_gravity="center_horizontal|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Foods"
        android:id="@+id/textView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodList"
        android:layout_width="197dp"
        android:layout_height="49dp">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/recipeRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recipies"
        android:id="@+id/textView2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipeList"
        android:layout_width="243dp"
        android:layout_height="51dp">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Health Articles"
        android:id="@+id/textView3" />

    <LinearLayout
        android:id="@+id/healthRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/healthList"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_above="@+id/addHealthButton">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Doctor"
        android:id="@+id/textView4" />


    <LinearLayout
        android:id="@+id/doctorRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/doctorsList"
        android:layout_width="match_parent"
        android:layout_height="54dp">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medication"
        android:id="@+id/textView5" />

    <LinearLayout
        android:id="@+id/medicineRecyclerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/medicinesList"
        android:layout_width="match_parent"
        android:layout_height="53dp">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>